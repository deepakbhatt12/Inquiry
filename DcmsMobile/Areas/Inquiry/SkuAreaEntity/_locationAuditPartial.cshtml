@model IList<DcmsMobile.Inquiry.Areas.Inquiry.SkuAreaEntity.LocationAuditModel>
<div class="table-responsive">
    <table class="table table-striped table-condensed table-bordered">
        <caption>
            <h4>Location Inventory Audit</h4>
        </caption>
        <thead>
            <tr>
                <th style="text-align:center">#</th>
                <th style="text-align:center">Date <span class="glyphicon glyphicon-sort-by-order-alt"></span></th>
                <th style="text-align:center">Pieces</th>
                <th style="text-align:center">By</th>

                <th style="text-align:center">Module</th>
                <th style="text-align:center">UPC</th>

                <th style="text-align:center">Balance</th>
            </tr>
        </thead>
        <tbody>
            @for (int k = 0; k < Model.Count; k++)
            {
                <tr>
                    <td>@(k + 1)</td>
                    <td>@Html.DisplayFor(m => m[k].DateCreated)</td>
                    <td style="text-align: right">@Html.DisplayFor(m => m[k].TransactionPieces)</td>
                    <td>@Html.DisplayFor(m => m[k].CreatedBy)</td>

                    <td>@Html.DisplayFor(m => m[k].ModuleCode)</td>
                    <td>
                        <a href="@Url.Action(MVC_Inquiry.Inquiry.SkuEntity.Sku(Model[k].SkuId))">
                            @Html.DisplayFor(m => m[k].DisplaySku)                         
                        </a>
                    </td>

                    <td style="text-align: right">@Html.DisplayFor(m => m[k].Pieces)</td>
                </tr>
            }
        </tbody>
    </table>
</div>  @*table-responsive*@
